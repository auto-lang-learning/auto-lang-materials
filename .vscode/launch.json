{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Launch translate_vtt.py",
            "program": "${workspaceFolder}/src/translate_vtt.py",
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "${input:input_file}",
                "${input:output_file}",
                "${input:target_language}",
                "${input:model_name}"
            ]
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "input_file",
            "description": "Path to the input VTT file",
            "default": "${workspaceFolder}/downloads/test_1min.vtt"
        },
        {
            "type": "promptString",
            "id": "output_file",
            "description": "Path to the output VTT file",
            "default": "${workspaceFolder}/downloads/test_1min_translated.vtt"
        },
        {
            "type": "promptString",
            "id": "target_language",
            "description": "Target language for translation",
            "default": "chinese"
        },
        {
            "type": "promptString",
            "id": "model_name",
            "description": "Model name for translation",
            "default": "deepseek-v3"
        }
    ]
}